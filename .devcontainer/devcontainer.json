{
  "name": "Python Jupyter",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "forwardPorts": [8888],
  "mounts": [
    "source=${localEnv:HOME}/Documents/pos/LLM-MRI,target=/llm-mri,type=bind"
  ],
  "postCreateCommand": "pip install -r docker_requirements.txt && pip install -e /llm-mri",
  "customizations": {
    "vscode": {
      "extensions": ["ms-toolsai.jupyter"]
    }
  }
}
